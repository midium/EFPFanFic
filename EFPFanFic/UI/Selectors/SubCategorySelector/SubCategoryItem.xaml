<UserControl x:Class="EFPFanFic.UI.Selectors.SubCategorySelector.SubCategoryItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EFPFanFic.UI.Selectors.SubCategorySelector"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="0,0,0,1" Grid.ColumnSpan="3" />
        <Label Name="SubCategoryName" Content="{Binding SubCategoryName}" Foreground="White" FontWeight="Bold" VerticalContentAlignment="Center" Margin="0,0,4,0"/>
        <Label Name="SubCategoryAuthor" Content="{Binding SubCategoryAuthor}" Foreground="White" VerticalContentAlignment="Center" Grid.Column="1" FontSize="10" Margin="0,0,4,0"/>
        <Label Name="SubCategoryItemsCount" Content="{Binding SubCategoryItemsCount}" Foreground="White" VerticalContentAlignment="Center" Grid.Column="2" FontSize="10" HorizontalContentAlignment="Right"/>
    </Grid>
</UserControl>
