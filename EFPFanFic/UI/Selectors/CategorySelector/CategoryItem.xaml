<UserControl x:Class="EFPFanFic.UI.Selectors.CategorySelector.CategoryItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EFPFanFic.UI.Selectors.CategorySelector"
             mc:Ignorable="d" d:DesignWidth="300" Height="72.489">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="0,0,0,1" />
        <Label Name="CategoryName" 
               Height="31" 
               Margin="10,7,10,0" 
               VerticalAlignment="Top" 
               Foreground="White" 
               FontSize="16" 
               FontWeight="Bold"
               Content="{Binding CategoryName}"/>
        <Label Name="CategoryItemsCount" 
               Content="{Binding CategoryItemsPrettyfied}" 
               HorizontalContentAlignment="Right" 
               Height="24" 
               Margin="10,38,10,0" 
               VerticalAlignment="Top" 
               Foreground="White" 
               FontSize="12"/>
    </Grid>
</UserControl>
